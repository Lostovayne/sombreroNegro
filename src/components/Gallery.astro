---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content"; 

interface Props {
  projects: CollectionEntry<"projects">[]
}

const { projects } = Astro.props;
const dataProject = projects.map((project) => {
  return project.data
})

